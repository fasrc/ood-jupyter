#!/usr/bin/env bash

# Benchmark info
echo "TIMING - Starting main script at: $(date)"

# Set working directory to home directory
cd "${HOME}"

#
# Start Jupyter Notebook Server
#

<%- unless context.modules.blank? -%>
# Purge the module environment to avoid conflicts
module purge

# Load the require modules
module load <%= context.modules %>

# List loaded modules
module list
<%- end -%>

# Benchmark info
echo "TIMING - Starting jupyter at: $(date)"

# Launch the Jupyter Notebook Server
set -x
export SINGULARITYENV_http_proxy=http://rcproxy.rc.fas.harvard.edu:3128
export SINGULARITYENV_https_proxy=https://rcproxy.rc.fas.harvard.edu:3128

singularity exec /n/helmod/apps/centos7/Singularity/jupytherhub/0.9.0b3-rstudio3.4.3/jupyterhub-singleuser jupyter notebook --config="${CONFIG_FILE}" <%= context.extra_jupyter_args %>
